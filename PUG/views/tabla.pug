doctype html
head
    link(
        rel='stylesheet'
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
        )
    title= Productos
    meta(
        charset="UTF-8"
        )
    meta(
        name="viewport"
        content="width=device-width, initial-scale=1.0"
        )
    meta(
        http-equiv="X-UA-Compatible"
        content="ie=edge"
        )
body(
    style="background-color: lightgray;"
    )
    div(class="container-fluid"
    style="padding-top: 3%;"
    )
        h1(
            style="color: dodgerblue;"
            ) Tabla de productos
        div(
            class="container-fluid"
            )
            table(class="table"
                )
                - if (productos.length === 0)
                    tr
                        td(
                            colspan="3"
                        ) No hay productos
                -else
                    th( 
                        scope="col"
                    ) Producto
                    th(scope="col"
                    ) Precio
                    th(scope="col"
                    ) Foto
                - for (let i=0; i < productos.length; i++)
                    tr
                        td= productos[i].title
                        td= productos[i].price
                        td
                            img(
                                src= productos[i].thumbnail
                                alt= "imagen" 
                                style= "height: 30px; width: 30px;"
                            )
        form(
            method="get"
            action="/"
        )
            button(
                type="submit"
                ) Cargar producto